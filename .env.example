# Database: postgres://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgres://greenhouse:greenhouse@localhost:5432/greenhouse

# MQTT Broker: mqtt://HOST:PORT
MQTT_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Backend
PORT=3000

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:5173

# JWT Secret (REQUIRED - min 32 chars)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRES_IN=7d

BCRYPT_ROUNDS=10
LOG_LEVEL=info

# Email (SMTP) - for password reset emails
# Gmail: smtp.gmail.com (use App Password, not regular password)
# SendGrid: smtp.sendgrid.net
# Mailgun: smtp.mailgun.org
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@greenhouse.local

# OAuth (optional - get from Google/Facebook Developer Console)
# GOOGLE_CLIENT_ID=
# FACEBOOK_APP_ID=
